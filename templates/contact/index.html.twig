{% extends 'baseadmin.html.twig' %}

{% block title %}Amour Livre - Messagerie admin
{% endblock %}

{% block body %}
	<section class="section-admin w--900 p--2 bck--admin br--15 pb--1">
		<h1 class="text-center pb--4 fsize-3 mb--1">Messages reçus</h1>

		<table class="table">
			<thead>
				<tr>
					<th class="text-color-dark fw--b text-center">Id</th>
					<th class="text-color-dark fw--b text-center">Nom</th>
					<th class="text-color-dark fw--b text-center">Email</th>
					<th class="text-color-dark fw--b text-center">Message</th>
					<th class="text-color-dark fw--b text-center">Date du Message</th>
					<th class="text-color-dark fw--b text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for contact in contacts %}
					<tr>
						<td>{{ contact.id }}</td>
						<td>{{ contact.nom }}</td>
						<td>{{ contact.email }}</td>
						<td>{{ contact.message }}</td>
						<td>{{ contact.dateMessage ? contact.dateMessage|date('Y-m-d') : '' }}</td>
						<td>
							<a class="btn btn-secondary w--mob-70 w--200 m--1 text-center" href="{{ path('contact_show', {'id': contact.id}) }}">Montrer</a>
							{{ include('contact/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6" class="text-color-dark">Pas d'entrée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{# On supprime la possibilité de créer nous même un message #}
		{#<a href="{{ path('contact_new') }}" class="text-color-dark fw--b">Créer nouvelle entrée</a>#}
	</section>
{% endblock %}
